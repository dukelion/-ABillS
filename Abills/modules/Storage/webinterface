							"$_DISCARDED: "  			. $line->[27] * 1 . ' '. $line->[15] . $html->br() .  
							$html->b("$_LEFTOVER: ". $line->[21] * 1 . ' '. $line->[15]) . $html->br() . '-' . $html->br() .
							"$_TOTAL: " 			. ($line->[2] + $line->[28] + $line->[27]). ' '. $line->[15],  
							"$_INSTALLED: " 	. $line->[28] * $line->[22]  . $html->br() .
							"$_ACCOUNTABILITY: " 	. $line->[25] * $line->[22]. $html->br() .
