								MULTI_ARRAY_VALUE => 1,
								NO_ID             => 1
							});
		$html->message('info', $_INFO, "$_CANT_RESERVE_MAX_VALUE $leftover ");
		$html->tpl_show(_include('storage_reserve', 'Storage'), {%$Storage, 
																	%FORM, 
