#***********************************************************
# ashield_sheduler
#***********************************************************
sub ashield_sheduler {
	my ($type, $action, $uid)=@_;

  my $user = $Ashield->user_info($uid);  	
  
  if ($type eq 'tp') {
    $Ashield->user_change({UID   => $uid, 
    	                  TP_ID => $action 
    	                  });
   }
  #Set channel
  elsif ($type eq 'channels') {
  	$action =~ s/;/, /g;
  	$FORM{IDS}=$action;
  	$LIST_PARAMS{UID}=$uid;
  	$FORM{change_now}=1;
  	$users->info( $uid );
  	ashield_user_channels({ QUIET  => 1 });
   }
}


